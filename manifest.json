{
  "manifest_version": 3,
  "name": "Time Sync - NTP Clock",
  "version": "1.2.2",
  "description": "Synchronize and display accurate time from multiple NTP servers (NIST, Google, WorldTimeAPI). Perfect for time-sensitive tasks.",
  "author": "A.res.t",
  "homepage_url": "https://github.com/RyuJin-other/timeStampV2",

  "icons": {
    "128": "src/icons/DarkMode/icon_128.png",
    "64": "src/icons/DarkMode/icon_64.png",
    "32": "src/icons/DarkMode/icon_32.png",
    "16": "src/icons/DarkMode/icon_16.png"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "src/icons/DarkMode/icon_128.png",
      "64": "src/icons/DarkMode/icon_64.png",
      "32": "src/icons/DarkMode/icon_32.png",
      "16": "src/icons/DarkMode/icon_16.png"
    },
    "default_title": "Time Sync - NTP Clock"
  },

  "permissions": ["storage", "action"],

  "host_permissions": [
    "https://worldtimeapi.org/*",
    "https://timeapi.io/*",
    "https://www.google.com/*",
    "https://www.nist.gov/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "web_accessible_resources": [
    {
      "resources": ["window.html", "window.js"],
      "matches": ["<all_urls>"]
    }
  ],

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },

  "minimum_chrome_version": "88"
}
